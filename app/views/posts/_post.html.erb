<%= div_for post, class:'post col-md-8 offset-md-2' do %>

  <div class="table-responsive">
    <table class="table">
      <thead>
      <tr>
        <th><h2><%= post.title %></h2></th>
        <th><%= ( post.body ) %></th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>Total FO's</td>
          <td><%= post.fot %></td>
        </tr>
        <tr>
          <td>DZone FO Wins</td>
          <td><%= post.dfow %></td>
        </tr>
        <tr>
          <td>DZone FO Losses</td>
          <td><%= post.dfol %></td>
        </tr>
        <tr>
          <td>% DZone FOâ€™s </td>
          <td><%= ((post.dfow+post.dfol)/post.fot)*100 %>% </td>
        </tr>
      </tbody>
    </table>
  </div>
  <p>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post_path(post), method: :delete %>
  </p>

<% end %>
